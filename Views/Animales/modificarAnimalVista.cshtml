@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Authentication.Cookies;
@using AppCuidandoPatitas.Models;
@model ModelAnimales

@{
    ViewData["Title"] = "Modificar Mascota";
    Layout = "~/Views/Shared/_Layout.cshtml";   
}

<div class="card">
    <form asp-action="actualizarMascota" asp-controller="Animales" method="post">
        <div class="row g-3 align-items-center p-3 fw-bold">

            <input asp-for="AnimalId" type="hidden" class="form-control"> <!-- Valor por defecto -->

            <div class="col-md-2">
                <label for="especieId" class="form-label">Especie</label>
                <select asp-for="EspecieId" class="form-select" id="especie" required>
                    @foreach (var especie in ViewBag.ListaEspecie)
                    {
                        <option value="@especie.EspecieId">@especie.EspecieNombre</option>
                    }
                </select>
            </div>           

            <div class="col-md-4">
                <label for="animalNombre" class="form-label">Nombre del Animal</label>
                <input asp-for="AnimalNombre" type="text" class="form-control" id="animalNombre" maxlength="30" value="Nombre por defecto" required> <!-- Valor por defecto -->
            </div>                  

            <div class="col-md-4">
                <label for="animalSexo" class="form-label">Sexo</label>
                <select asp-for="AnimalSexo" class="form-control" id="animalSexo" required>
                    <option value="" disabled>Seleccione el sexo del animal</option>
                    <option value="M" selected>Masculino</option> <!-- Valor por defecto -->
                    <option value="F">Femenino</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="animalEdad" class="form-label">Edad</label>
                <input asp-for="AnimalEdad" type="number" class="form-control" id="animalEdad" value="2" required> <!-- Valor por defecto -->
            </div>

            <div class="col-md-4">
                <label for="animalFechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                <input asp-for="AnimalFechaNacimiento" type="date" class="form-control" id="animalFechaNacimiento" value="@DateTime.Now.AddYears(-2).ToString("yyyy-MM-dd")" required> <!-- Valor por defecto -->
            </div>

            <div class="col-md-4">
                <label for="animalPeso" class="form-label">Peso</label>
                <input asp-for="AnimalPeso" type="number" step="0.01" class="form-control" id="animalPeso" value="10.0" required> <!-- Valor por defecto -->
            </div>

            <div class="col-md-4">
                <label for="animalCastrado" class="form-label">¿Animal Castrado?</label>
                <select asp-for="AnimalCastrado" class="form-select" id="animalCastrado" required>
                    <option value="" disabled>Seleccione una opción</option>
                    <option value="1" selected>Sí</option> <!-- Valor por defecto -->
                    <option value="0">No</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="animalEstado" class="form-label">Estado</label>
                <select asp-for="AnimalEstadoId" class="form-select" id="especie" disabled>
                    @foreach (var animalEstado in ViewBag.ListaAnimalEstado)
                    {
                        <option value="@animalEstado.AnimalEstadoId">@animalEstado.AnimalEstadoNombre</option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label for="documentoId" class="form-label">Tipo Documento</label>
                <select asp-for="DocumentoID" class="form-select" id="documento" required>
                    @foreach (var doc in ViewBag.ListaDocumentos)
                    {
                        <option value="@doc.DocumentoID">@doc.DocumentoNombre</option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label for="animalDocumento" class="form-label">Número de Documento</label>
                <input asp-for="AnimalDocumento" type="number" class="form-control" id="animalDocumento" maxlength="20" value="1234567890" required> <!-- Valor por defecto -->
            </div>

            <div class="col-md-4">
                <label for="animalDescripcion" class="form-label">Descripción</label>
                <textarea asp-for="AnimalDescripcion" class="form-control" id="animalDescripcion" rows="3">Descripción por defecto</textarea> <!-- Valor por defecto -->
            </div>

            <div class="col-md-6">
                <button type="submit" class="btn btn-primary mb-4 fw-bold">Registrar</button>
            </div>
        </div>
    </form>
</div>

